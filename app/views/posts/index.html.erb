<h1>All Posts</h1>

<%= link_to 'New Post', new_post_path %>

<p>
  <% @posts.each do |post| %>

  <strong>Caption:</strong>
  <%= post.caption %>
</p>
<p>
  <b>Image:</b>
  <%= link_to image_tag(post.post_image.thumb.url), post.post_image.medium.url %>
</p>
<br>
<%= link_to 'Edit', edit_post_path(post) %> |
<%= link_to 'Back', posts_path %> <br><br>
<% end %>